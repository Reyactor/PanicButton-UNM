{% extends "_templates/body.njk" %}

{% block style %}
    <link rel="stylesheet" href="styles/login.css">
{% endblock %}

{% block login %}
<div class="container-fluid h-100 d-flex justify-content-center align-items-md-center">
    <div class="text-bg-light rounded overflow-hidden d-flex flex-column flex-md-row mt-3 mb-3">
        <div class="text-bg-primary d-flex flex-column justify-content-center align-items-center p-3">
            <img src="img/logo.png" alt="Logo" width="150">
            <h3 class="mt-3 mb-0 fw-bold text-center">PANIC BUTTON</h3>
        </div>
        <form class="p-3 overflow-auto" action="/register" method="post" autocomplete="off" enctype="multipart/form-data">
            {% if alreadyRegistered %}
                <div class="alert alert-danger show" role="alert">
                    Email sudah terdaftar.
                </div>
            {% endif %}

            <div class="mb-3">
                <label for="register-name">Nama</label>
                <input class="form-control" type="text" name="register-name" id="register-name" required>
            </div>
            <div class="mb-3">
                <label for="register-nim">NIM</label>
                <input class="form-control" type="text" inputmode="numeric" pattern="\d*" name="register-nim" id="register-nim" required>
            </div>
            <div class="mb-3">
                <label for="register-email">Email</label>
                <input class="form-control" type="email" name="register-email" id="register-email" autocomplete="off" required>
            </div>
            <div class="mb-3">
                <label for="register-password">Kata Sandi</label>
                <input class="form-control" type="password" name="register-password" id="register-password" autocomplete="new-password" required>
            </div>
            <div class="row row-cols-2 mb-3 g-2">
                <div class="col">
                    <label for="register-fakultas">Fakultas</label>
                    <select class="form-select" name="register-fakultas" id="register-fakultas" required>
                        <option selected></option>
                        <option value="Teknik">Teknik</option>
                    </select>
                </div>
                <div class="col">
                    <label for="register-studi">Program Studi</label>
                    <select class="form-select" name="register-studi" id="register-studi" required>
                        <option selected></option>
                        <option value="Pendidikan Teknologi Pertanian">Pendidikan Teknologi Pertanian (B)</option>
                        <option value="Pendidikan Teknik Bangunan">Pendidikan Teknik Bangunan (B)</option>
                        <option value="Pendidikan Teknik Otomotif">Pendidikan Teknik Otomotif (A)</option>
                        <option value="Pendidikan Teknik Elektro">Pendidikan Teknik Elektro (B)</option>
                        <option value="Pendidikan Kesejahteraan Keluarga">Pendidikan Kesejahteraan Keluarga (B)</option>
                        <option value="Pendidikan Teknik Informatika dan Komputer">Pendidikan Teknik Informatika dan Komputer (B)</option>
                        <option value="Pendidikan Teknik Mesin">Pendidikan Teknik Mesin (A)</option>
                        <option value="Pendidikan Teknik Elektronika">Pendidikan Teknik Elektronika (A)</option>
                    </select>
                </div>
            </div>
            <div class="mb-3">
                <label for="register-photo">Foto Profil</label>
                <input class="form-control" type="file" name="register-photo" id="register-photo" accept="image/png, image/jpeg" required>
            </div>
            <button type="submit" class="btn btn-primary">Daftar</button>
            <a href="/login" class="btn">Masuk</a>
        </form>
    </div>
</div>
{% endblock %}